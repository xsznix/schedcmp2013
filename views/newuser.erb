<% @title = 'Welcome! &ndash; Schedule Comparinator 2013'; @user_css = 'newuser'; %>
<%= partial :'part/head' %>

<div class="layer accent huge center nopad">
	<div class="layer_inner">
		<h1 class="title">Welcome to Schedule Comparinator 2013</h1>
		<p class="subtitle">To get started, please provide us with some basic information about yourself.</p>
	</div>
</div>

<div class="layer dark center nopad">
	<div class="layer_inner">
		<p class="subtitle">This preview of Schedule Comparinator is for LASA students only! If you are in RRISD, please <a href="/logout/register">sign up to be notified</a>.</p>
	</div>
</div>

<div class="layer lighter center nopad">
	<div class="layer_inner">
		<form method="POST" id="newuser">
			<h2 class="title">Which school do you attend?</h2>
			<div class="choices_row">
				<input id="westwood" value="ww" type="radio" class="hidden" name="school" <%= @student.school == :ww ? "checked" : "" %>>
				<label for="westwood">
					<img src="/img/schools/westwood.png" alt="Westwood HS" title="Westwood HS">
					<span class="caption">Westwood HS</span>
				</label>
				<input id="mcneil" value="mn" type="radio" class="hidden" name="school" <%= @student.school == :mn ? "checked" : "" %>>
				<label for="mcneil">
					<img src="/img/schools/mcneil.jpg" alt="McNeil HS" title="McNeil HS">
					<span class="caption">McNeil HS</span>
				</label>
				<input id="roundrock" value="rr" type="radio" class="hidden" name="school" <%= @student.school == :rr ? "checked" : "" %>>
				<label for="roundrock">
					<img src="/img/schools/roundrock.jpg" alt="Round Rock HS" title="Round Rock HS">
					<span class="caption">Round Rock HS</span>
				</label>
				<input id="stonypoint" value="sp" type="radio" class="hidden" name="school" <%= @student.school == :sp ? "checked" : "" %>>
				<label for="stonypoint">
					<img src="/img/schools/stonypoint.jpg" alt="Stony Point HS" title="Stony Point HS">
					<span class="caption">Stony Point HS</span>
				</label>
				<input id="cedarridge" value="cr" type="radio" class="hidden" name="school" <%= @student.school == :cr ? "checked" : "" %>>
				<label for="cedarridge">
					<img src="/img/schools/cedarridge.jpg" alt="Cedar Ridge HS" title="Cedar Ridge HS">
					<span class="caption">Cedar Ridge HS</span>
				</label>
				<input id="lasa" value="lasa" type="radio" class="hidden" name="school" checked>
				<label for="lasa">
					<img src="/img/schools/lasa.jpg" alt="Liberal Arts and Science Academy" title="Liberal Arts and Science Academy">
					<span class="caption">LASA</span>
				</label>
			</div>
			
			<h2 class="title">What is your graduation year?</h2>
			<div class="choices_row">
				<input type="radio" id="classof14" value="14" class="hidden" name="gradyear" <%= @student.gradyear == 14 ? "checked" : "" %>>
				<label for="classof14">2014</label>
				<input type="radio" id="classof15" value="15" class="hidden" name="gradyear" <%= @student.gradyear == 15 ? "checked" : "" %>>
				<label for="classof15">2015</label>
				<input type="radio" id="classof16" value="16" class="hidden" name="gradyear" <%= @student.gradyear == 16 ? "checked" : "" %>>
				<label for="classof16">2016</label>
				<input type="radio" id="classof17" value="17" class="hidden" name="gradyear" <%= @student.gradyear == 17 ? "checked" : "" %>>
				<label for="classof17">2017</label>
			</div>
			
			<p class="subtitle">You may change this information at any time if it turns out to be incorrect.</p>
			
			<input type="submit" class="button accent2" value="Next">
		</form>
	</div>
</div>

<%= partial :'part/foot' %>